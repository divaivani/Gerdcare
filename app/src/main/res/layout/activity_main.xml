<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include android:id="@+id/menuAtas"
        layout="@layout/menu_atas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="Mon&#10;16"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="75dp"
        android:text="Tue&#10;17"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="130dp"
        android:text="Wed&#10;18"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="185dp"
        android:text="Thu&#10;19"
        android:textSize="14sp"
        android:background="@drawable/button_shape_chosen"
        android:backgroundTint="#FF597B"
        android:textColor="@color/white"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="240dp"
        android:text="Fri&#10;20"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="295dp"
        android:text="Sat&#10;21"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button7"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="350dp"
        android:text="Sun&#10;22"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <TextView
        android:id="@+id/textViewFeeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="180dp"
        android:text="How's your feeling today?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@id/radioButtonSad">

        <RadioButton
            android:id="@+id/radioButtonSad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"/>

        <RadioButton
            android:id="@+id/radioButtonHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="205dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"/>
        <RadioButton
            android:id="@+id/radioButtonMad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mad"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="205dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="265dp"
        android:text="Rate your emotion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="285dp"/>
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-50dp"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="-50dp"/>
    </RadioGroup>

    <FrameLayout
        android:layout_width="365dp"
        android:layout_height="275dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="342dp"
        android:background="@drawable/frambg"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:text="Whatâ€™s symptom did you feel today?"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/cbs1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Headache"/>

            <CheckBox
                android:id="@+id/cbs2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Nauseous"/>

            <CheckBox
                android:id="@+id/cbs3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Vomit"/>

            <CheckBox
                android:id="@+id/cbs4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Heartburn"/>

            <CheckBox
                android:id="@+id/cbs5"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Bloated"/>
        </TableLayout>

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#FF597B"
        android:text="SUBMIT" />
</RelativeLayout>